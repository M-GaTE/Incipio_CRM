{% extends "MgateSuiviBundle::layout.html.twig" %}

{% block title %}
{{ 'suivi.recapitulatif_suivi'|trans({}, 'suivi') }} - {{ parent() }}
{% endblock %}

{% block content_bundle %}
<form method="post" {{ form_enctype(form) }}>
    <div id="ganttChart" style="width: 100%;"></div>
    <br />
    <input type="submit" value="{{ 'suivi.commentaires_enregistrer'|trans({}, 'suivi') }}" class="btn btn-default"/>
    <br />
    <table class="table table-striped table-bordered">
        <tr>
            <th>{{ 'suivi.reference'|trans({}, 'suivi') }}</th>
            <th>{{ 'suivi.sujet'|trans({}, 'suivi') }}</th>
            <th>{{ 'suivi.client'|trans({}, 'suivi') }}</th>
            <th>{{ 'suivi.suiveur_projet'|trans({}, 'suivi') }}</th>
            <th>{{ 'suivi.signe'|trans({}, 'suivi') }}</th>
            <th>{{ 'suivi.commentaire'|trans({}, 'suivi') }}</th>
        </tr>
        {% set textAreaID = -1 %}
        {% for mandat in etudesParMandat | reverse %}
        {% if mandat |length %}
        <tr>
            <th colspan="6">{{ 'suivi.mandat'|trans({}, 'suivi') }} {{(etudesParMandat | length - loop.index0)}}</th>
        </tr>
        {% endif %}
            {% for etude in mandat %}
        {% set textAreaID = textAreaID + 1 %}
        {% set signe = ( etude.cc ? etude.cc.spt1 and etude.cc.spt2 : false )%}
        <tr class="{{ (etude.stateID == 1 ? "info" : (etude.stateID == 2 ? "success" : (etude.stateID == 3 ? "warning" : (etude.stateID == 4 ? "" : "error")))) }}">
            <td><a href="{{ path('MgateSuivi_etude_voir', {'nom': etude.nom}) }}"> {{ etude.reference }}</a></td>
            <td>{{ etude.nom }}</td>
            <td>{% include "MgateSuiviBundle:Etude:Buttons/Prospect.html.twig" with  {'prospect':  etude.prospect} %}</td>
            <td>{% include "MgateSuiviBundle:Etude:Buttons/Suiveur.html.twig" with  {'suiveur':  etude.suiveur} %}</td>
            <td>{% if signe %}<span class="label label-success">{{ 'suivi.oui'|trans({}, 'suivi') }}</span>
                {% else %}
                    <span class="label label-important">{{ 'suivi.non'|trans({}, 'suivi') }}</span>
                {% endif %}</td>
            <td>
                {# Token pour confimer que le text éditer correspond à l'étude + textarea  #}
                {{ form_widget(form[2*textAreaID]) }}{{ form_widget(form[2*textAreaID+1]) }}
            </td>
        </tr>
        {% endfor %}
        {% endfor %}
    </table>
    <input type="submit" value="{{ 'suivi.commentaires_enregistrer'|trans({}, 'suivi') }}"/>
</form>
{% endblock %}

{% block javascript %}
{{ parent() }}
    <script src="{{ asset('js/highcharts.js') }}"></script>
    <script src="{{ asset('js/highcharts-fr.js') }}"></script>
    <script src="{{ asset('js/exporting.js') }}"></script>

    <script type="text/javascript">
        {{ chart(chart) }}
    </script>
{% endblock %}
